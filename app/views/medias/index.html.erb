<h1><%=t :listing%> <%=t(:media)%></h1>

<table>
  <tr>
    <th><%= t(:title) %></th>
    <th><%= t(:mediaType) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @medias.each do |media| %>
  <tr>
    <td><%= media.title %></td>
    <td><%= media.mediaType.name %></td>
    <td><%= link_to t(:show), media %></td>
    <td><%= link_to t(:edit), edit_media_path(media) %></td>
    <td><%= link_to t(:destroy), media, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "#{t(:new)} #{t(:media)}", new_media_path %>
