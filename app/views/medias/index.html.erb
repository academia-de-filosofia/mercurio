<h1><%=t :listing%> <%=t(:medias)%></h1>

<div class="span-20">
<%= form_tag medias_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Buscar", :name => nil %>
	<%= @medias.total_entries %> MÃ­dia(s) Encontrada(s).
  </p>
<% end %>
</div>
<div class="span-3">
	<%= link_to "#{t(:new)} #{t(:media)}", new_media_path, :class => 'button' %>
</div>

<table class="grade clear">
  <tr>
	<th><%= t(:code) %></th>
    <th><%= t(:title) %></th>
    <th><%= t(:mediaType) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @medias.each do |media| %>
  <tr class="<%= cycle('odd', 'even') %>">
	<td><%= media.full_code %></td>
    <td><%= media.title %></td>
    <td><%= media.mediaType.name %></td>
    <td><%= link_to t(:show), media, :class => 'button' %></td>
    <td><%= link_to t(:edit), edit_media_path(media), :class => 'button' %></td>
    <td><%= link_to t(:destroy), media, :class => 'button', :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<div class="apple_pagination">
<%= will_paginate @medias %>
</div>
